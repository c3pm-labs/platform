{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "rootDirs": ["src", "stories"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "./next.config.js",
    "**/*.tsx"
  ]
}
